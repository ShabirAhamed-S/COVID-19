 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Enter Address">
        </div>
        
        <div class="form-group">
            <label for="phone" class="text-light">Phone Number</label>
        <input id="phone" name="phone" class="no-arrow" value="" type="text" placeholder="Enter Phone Number">
        </div>
        
        <div class="form-group">
            <label for="fever" class="text-light">Fever</label>
            <input type="text" name="fever" value="" placeholder="Fever in Fahrenheit">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Positive" >
                <label for="radio-4" class="radio-label">Positive</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Negative" >
                <label for="radio-5" class="radio-label">Negative</label>
            </div>
        </div>
        <div class="form-group">
            <label for="admit" class="text-light">Admission</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="admit" value="Admit" >
                <label for="radio-6" class="radio-label">Admit</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="admit" value="No need" >
                <label for="radio-7" class="radio-label">No need</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>